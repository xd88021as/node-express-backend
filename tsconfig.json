{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@database/*": ["database/*"],
      "@websocket/*": ["websocket/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@middlewares/*": ["middlewares/*"],
      "@type/*": ["types/*"],
      "@redis/*": ["redis/*"],
      "@jobQueue/*": ["jobQueue/*"],
      "@container/*": ["container/*"]
    }
  },
  "include": ["src"]
}
